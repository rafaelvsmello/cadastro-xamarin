<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cadastro.View.Cadastro"
             Title="Novo Cadastro">
    <ContentPage.Content>
        <StackLayout>            
            <Entry x:Name="txtDescricao" Placeholder="Descrição" ClearButtonVisibility="WhileEditing" />            
            <DatePicker x:Name="dtpData" Format="dd/MM/yyyy" />
            <Picker x:Name="pckStatus" Title="Selecione o status" />
            <Button x:Name="btnCadastrar" Text="Cadastrar" Margin="10" Font="20" BackgroundColor="DimGray" TextColor="White" Clicked="btnCadastrar_Clicked" />
            <Button Text="Voltar" VerticalOptions="EndAndExpand" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>